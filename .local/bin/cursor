#!/bin/sh
#
# teleport cursor

w="$(xdotool getactivewindow)"

for i in $(xdotool search --class tabbed); do
	[ "$w" = "$i" ] && exit
done

{ wattr xywh "$(pfw)"; wmp; } | {
	read -r x y w h
	read -r  mx  my

	# exit if the cursor is already on the window
	[ $((mx >= x && mx <= x + w && my >= y && my <= y + h)) -eq 1 ] && exit

	x=$((x + w / 2))
	y=$((y + h / 2))

	wmp "$x" "$y"
}
